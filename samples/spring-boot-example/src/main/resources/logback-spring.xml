<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- dev -->
    <springProfile name="default">
        <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <charset>UTF-8</charset>
                <pattern>[%-5level] %d{yyMMdd HH:mm:ss.SSS} - %msg \(%logger\) \(%thread\) %n</pattern>
            </encoder>
        </appender>
        <root level="INFO">
            <appender-ref ref="console"/>
        </root>
        <logger name="com.morrisz" level="DEBUG"/>
    </springProfile>
</configuration>